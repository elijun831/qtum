.:53 {
  errors health {
    lameduck 5s
  }
  ready
  kubernetes cluster.local in-addr.arpa ip6.arpa {
    pods insecure
    fallthrough in-addr.arpa ip6.arpa
    ttl 30
  }
  prometheus :9153
  forward . /etc/resolv.conf
  cache {
    denial 300
    ttl 30
  }
  log
}

*.quantumworkspace.dev:53 {
  errors
  health {
    lameduck 5s
  }
  ready

  # A record
  a *.quantumworkspace.dev 127.0.0.1

  # MX record
  mx *.quantumworkspace.dev 10 mail.quantumworkspace.dev

  # CNAME record
  cname www *.quantumworkspace.dev

  # SOA record
  soa *.quantumworkspace.dev root.quantumworkspace.dev 2023040401 3600 1800 604800 300

  # DNSSEC Settings
  dnssec {
    algorithm RSASHA1
    keyid 257 1024
    zone *.quantumworkspace.dev
  }

  cache {
    denial 300
    ttl 30
  }
  log
}
